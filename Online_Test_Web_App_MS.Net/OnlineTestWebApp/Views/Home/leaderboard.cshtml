@using Data_Access_Layer;
@using Business_Object_Layer; 
@{ ViewBag.title = "leaderboard"; }
@{ var list = (SortedDictionary<double, Exam>)ViewData["LIST"]; }
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .navbar {
            overflow: hidden;
            background-color: #333;
        }

            .navbar a {
                float: left;
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

            .navbar img {
                float: left;
                max-width: 100%;
                max-height: 100%;
                margin-right: 20px;
            }

            .navbar a:hover {
                background-color: #111;
            }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: rebeccapurple;
            color: white;
        }

        table, th, td {
            border: 1px solid black;
            box-shadow: 5px 10px #888888;
        }

        td {
            background-color: saddlebrown;
            color: white;
        }
    </style>
</head>
<body>


    <h2 style="text-align:center">Leaderboard</h2>

    <table>
        <tr>
            <td>
                Id
            </td>
            <td>
                First Name
            </td>
            <td>
                Last Name
            </td>
            <td>
                Marks
            </td>
            <td>
                Percentage
            </td>
        </tr>






        @{ foreach (var kvp in list)
            {
                <tr>
                    @kvp.Value
                    <th>
                        @kvp.Value.id
                    </th>
                    <th>
                        @kvp.Value.studentFirstName
                    </th>
                    <th>
                        @kvp.Value.studentLastName
                    </th>
                    <th>
                        @kvp.Value.marks
                    </th>
                    <th>
                        @kvp.Value.percentage
                    </th>
                </tr>

            } }
    </table>

</body>
</html>


