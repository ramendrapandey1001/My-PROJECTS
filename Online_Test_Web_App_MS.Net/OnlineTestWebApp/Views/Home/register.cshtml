@{ String message = (String)ViewData["MESSAGE"]; }
<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>
    <style>
        /* Add your CSS styles here */
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border: solid black;
            border-radius: 10px
        }



        .form-group {
            margin-bottom: 10px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input[type="text"],
            .form-group input[type="password"] {
                padding: 10px;
                width: 100%;
                box-sizing: border-box;
            }
    </style>
</head>
<body>

    <h1 id="message"></h1>

    <div id="register">
        <h2>Register</h2>
        <form action="register">
            <div class="form-group">
                <label for="first-name">First Name:</label>
                <input type="text" id="firstname" name="firstname" placeholder="first name">
            </div>
            <div class="form-group">
                <label for="last-name">Last Name:</label>
                <input type="text" id="lastname" name="lastname" placeholder="last name">
            </div>
            <div class="form-group">
                <label for="username">User Name:</label>
                <input type="text" id="username" name="username" placeholder="user name">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" autocomplete="current-password" required="" id="password" placeholder="password">
                <i class="far fa-eye" id="togglePassword" style="margin-left: -30px; cursor: pointer;"></i>
            </div>
            <div class="form-group">
                <label for="username">Privilege:</label>
                <input type="text" id="privilege" name="privilege" placeholder="true or false">
            </div>
            <input type="submit" value="Register" id="submit">
        </form>
    </div>
    

<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function (e) {
        // toggle the type attribute
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('fa-eye-slash');
    });

    let flag = false;
    let success = document.getElementById("submit").addEventListener("click", function () {
        flag = true;
        let message = flag ? message : "";
        document.getElementById("message").innerHTML = message;
    });
 
    
</script>
</body>
</html>
